<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".POIActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/map_poi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/btn_navigation"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:onClick="navigation"
        android:background="@color/white"
        android:backgroundTint="@color/btn_background"
        android:foreground="@drawable/navi"
        android:foregroundTint="@color/btn_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.025"/>
    <Button
        android:id="@+id/btn_location"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="location"
        android:background="@color/white"
        android:backgroundTint="@color/btn_background"
        android:foreground="@drawable/location"
        android:foregroundTint="@color/btn_foreground"
        app:layout_constraintTop_toBottomOf="@id/btn_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.98"/>

</androidx.constraintlayout.widget.ConstraintLayout>